{
  "name": "tiny-watch-party-worker",
  "version": "1.0.2",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "dev:wrangler": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy --env production",
    "type-check": "bun run tsc --noEmit",
    "test": "bun test",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration.test.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "logs": "wrangler tail",
    "logs:pretty": "wrangler tail --format pretty",
    "logs:json": "wrangler tail --format json",
    "logs:websocket": "wrangler tail --search 'WS-MESSAGE'",
    "logs:room": "wrangler tail --search 'ROOM'",
    "logs:error": "wrangler tail --status error",
    "logs:search": "wrangler tail --search"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250828.0",
    "@types/bun": "latest",
    "wrangler": "^4.33.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "hono": "^4.9.4"
  }
}
